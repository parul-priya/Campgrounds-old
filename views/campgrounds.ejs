<% include partials/header %>




<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>Go through our amazing list of campgrounds and add yours too!</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Want to add a new campground?!</a>
        </p>
    </header>
    
    <h3>popular campground</h3>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-4 col-sm-6">
                        <div class="thumbnail">
                            <img src= "<%= campground.image %>">
                            <div class="caption"><h4> <%= campground.name %></h4></div>
                        </div>
                </div>
        <% }); %>
        </div>
    </div>
    
</div>

<% include partials/footer %>